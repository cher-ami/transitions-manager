{
  "name": "@cher-ami/transitions-manager",
  "version": "0.5.1",
  "license": "MIT",
  "author": "Willy Brauner & cher-ami",
  "source": "src/index.ts",
  "description": "Transitions manager allows to handle and dispatch transition states from anywhere in the application",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "unpkg": "./dist/index.umd.js",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.umd.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/cher-ami/transitions-manager.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build",
    "build:watch": "vite build --watch",
    "pre-publish": "npm run build && npm run test",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "dev:basic": "pnpm --filter ./examples/basic run dev",
    "dev:with-router": "pnpm --filter ./examples/with-router run dev"
  },
  "dependencies": {
    "@wbe/debug": "^1.1.0"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "jsdom": "^21.1.1",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vite-plugin-dts": "^2.3.0",
    "vitest": "^0.30.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "@testing-library/dom",
        "@testing-library/react-hooks"
      ]
    }
  }
}
