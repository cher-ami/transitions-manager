{
  "name": "@cher-ami/transitions-manager",
  "version": "0.5.1",
  "license": "MIT",
  "author": "Willy Brauner & cher-ami",
  "source": "src/index.ts",
  "description": "Transitions manager allows to handle and dispatch transition states from anywhere in the application",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/cher-ami/transitions-manager.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch --sourcemap",
    "dev": "FORCE_COLOR=1 turbo run dev",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@cher-ami/debug": "^1.2.0"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "jsdom": "^22.1.0",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^4.5.0",
    "vite-plugin-dts": "^3.6.3",
    "tsup": "^7.2.0",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "@testing-library/dom",
        "@testing-library/react-hooks"
      ]
    }
  }
}
