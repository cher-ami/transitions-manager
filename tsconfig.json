{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "esNext",
    "target": "es6",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "types": ["vite" ,"node", "jest"],
    "jsx": "react",
    "composite": false,
    "declaration": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "strictNullChecks": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
